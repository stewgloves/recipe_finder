<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h1 class="text-center">Forgot your password?</h1>
        </div>
        <div class="card-body">
          <%= tag.div(flash[:alert], class: "alert alert-danger") if flash[:alert] %>

          <%= form_with url: passwords_path, class: "needs-validation", novalidate: true do |form| %>
            <!-- Email Address Field -->
            <div class="form-group mb-3">
              <%= form.label :email_address, "Email Address", class: "form-label" %>
              <%= form.email_field :email_address, class: "form-control", required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email address", value: params[:email_address] %>
              <div class="invalid-feedback">Please enter a valid email address.</div>
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
              <%= form.submit "Email reset instructions", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
