<div class="container-fluid pt-4 pb-5">
  <div class="row mb-4">
    <div class="col">
      <%= form_with url: recipes_path, method: :get, local: true do |f| %>
        <div class="input-group w-100">
          <%= f.text_field :query, value: params[:query], placeholder: "What ingredients do you have...", class: "form-control" %>
          <div class="input-group-append">
            <%= f.submit "Search", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-lg-12">
    <h2 class="font-weight-bold mb-4">Recipes</h2>
    <% if @records.any? %>
      <div class="row">
        <% @records.each do |recipe| %>
          <div class="col-12 col-sm-6 col-md-6 col-lg-4 mb-4">
            <div class="card recipe-card h-100 shadow-sm">
              <%= image_tag recipe.image, class: "card-img-top recipe-image", alt: recipe.title %>
              <div class="card-body">
                <h5 class="card-title font-weight-bold"><%= recipe.title %></h5>
                <p class="card-text text-muted">By <%= recipe.author %></p>
                <p class="card-text">Rating: <%= star_rating(recipe.ratings) %></p>
                <div class="rating-stars mb-2" style="--rating: <%= recipe.ratings %>"></div>
                <ul class="list-unstyled ingredients-list">
                  <% recipe.ingredients.each do |ingredient| %>
                    <li><%= ingredient %></li>
                  <% end %>
                </ul>
                <div class="favorite-button-container text-right">
                  <%= render partial: 'favourite_button', locals: { recipe: recipe } %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p>No recipes found.</p>
    <% end %>
    <div class="footer">
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>
